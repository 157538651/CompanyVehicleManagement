<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model"><!--  对应的包 -->

    <class name="Vehicle" table="vehicle">
        <id name="vid" column="vid">
        <generator class="assigned"></generator>
        </id>
        <property name="name"></property>
        <property name="getday"></property>
        <property name="model"></property>
        <property name="brand"></property>
        <property name="maxpeople"></property>
        <property name="kind"></property>
        <property name="state"></property>
       
      
    </class>

</hibernate-mapping>